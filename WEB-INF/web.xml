<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
   <servlet>
       <servlet-name>LoginServlet</servlet-name>
       <servlet-class>com.example.LoginServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>LoginServlet</servlet-name>
       <url-pattern>/login</url-pattern>
   </servlet-mapping>
   <servlet>
       <servlet-name>CookieInputServlet</servlet-name>
       <servlet-class>com.example.CookieInputServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>CookieInputServlet</servlet-name>
       <url-pattern>/createCookies</url-pattern>
   </servlet-mapping>
   <servlet>
       <servlet-name>DisplayCookiesServlet</servlet-name>
       <servlet-class>com.example.DisplayCookiesServlet</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>DisplayCookiesServlet</servlet-name>
       <url-pattern>/display</url-pattern>
   </servlet-mapping>
</web-app>
